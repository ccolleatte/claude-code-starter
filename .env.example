# Environment Variables for MCP Servers

# Required for Cipher MCP Server
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Optional for Cipher
VOYAGE_API_KEY=your_voyage_api_key_here

# MCP Server Configuration
MCP_SERVER_MODE=aggregator

# Exa Search API
EXA_API_KEY=your_exa_api_key_here

# Optional environment variables that might be needed
NODE_ENV=development

# Claude Metrics Configuration (Public defaults)
HALLUCINATION_THRESHOLD=10
RESPONSE_TIME_THRESHOLD=15.0
CONFIG_LOAD_THRESHOLD=1000
CACHE_HIT_TARGET=75
TEST_COVERAGE_TARGET=70
ERROR_RECOVERY_TARGET=80